generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AbandonedCart {
  id         Int      @id @default(autoincrement())
  checkoutId String   @unique
  email      String
  lineItems  Json
  totalPrice Float
  createdAt  DateTime @default(now())
}
